extends ../base

block content
  h1 Change password
  form(action=`/user/change-password`, method='POST')
    input(type='hidden', name='_csrf', value=csrfToken)
    label(for='plainPassword') Current password
    input#plainPassword(type='password', name='plainPassword', required)
    label(for='newPlainPassword') New password
    input#newPlainPassword(type='password', name='newPlainPassword', required)
    label(for='repeatedNewPlainPassword') Repeat new password
    input#repeatedNewPlainPassword(
      type='password',
      name='repeatedNewPlainPassword',
      required
    )
    button(type='submit') Change password
