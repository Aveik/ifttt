extends ../../../views/base

block content
  .container.py-5
    h1.mb-4= applet.name
    .row
      .mb-4.col-lg-3.mb-lg-0
        .div.list-group
          a.list-group-item.list-group-item-action.active(href='#description', data-toggle='tab') Description
          if userApplet
            form(
              action=`/applets/dropbox-watcher/unsubscribe/${userApplet.identifier}`,
              method='POST'
            )
              input(type='hidden', name='_csrf', value=csrfToken)
              input(
                type='hidden',
                name='providerAccessToken',
                value=userApplet.providerAccessToken
              )
              input(type='hidden', name='config', value=userApplet.configuration)
              button.list-group-item.list-group-item-action(type='submit') Unsubscribe
          else
            a.list-group-item.list-group-item-action(href='#githubWatcherModal', data-toggle='modal') Subscribe
      .col-lg-9
        .card.tab-content
          #description.card-body.tab-pane.fade.show.active= applet.description

  #githubWatcherModal.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
      form.modal-content(action=`/applets/github-watcher/authorize`, method='POST')
        .modal-header
          h5.modal-title Subscribe
        .modal-body
          input(type='hidden', name='_csrf', value=csrfToken)
          .form-group
            label(for='repository') Repository
            input#repository.form-control(type='text', name='repository', required)
        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Close
          button.btn.btn-primary(type='submit') Confirm