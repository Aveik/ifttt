extends ../../../views/base

block content
  .container.py-5
    h1.mb-4= applet.name
    .row
      .mb-4.col-lg-3.mb-lg-0
        .div.list-group
          a.list-group-item.list-group-item-action.active(
            href='#description',
            data-toggle='tab'
          ) Description
          if userApplet
            form(
              action=`/applets/weather-report-gsheet/unsubscribe/${userApplet.identifier}`,
              method='POST'
            )
              input(type='hidden', name='_csrf', value=csrfToken)
              button.list-group-item.list-group-item-action(type='submit') Unsubscribe
          else
            a.list-group-item.list-group-item-action(href=authUrl) Subscribe
      .col-lg-9
        .card.tab-content
          #description.card-body.tab-pane.fade.show.active= applet.description
